<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE sailpoint PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<sailpoint>
    <ImportAction name="merge">
        <Configuration name="PluginFrameworkConfig">
            <Attributes>
                <Map>
                    <entry key="Plugins">
                        <value>
                            <Map>
                                <entry key="emphierarchyplugin">
                                    <value>
                                            <Plugin uniqueName="emphierarchyplugin"
											displayName="Employee Hierarchy" enabled="true" version="0.0.1.0"
											allowDisable="true" visible="true" allowUninstall="true"
											minFrameworkVersion="0.5.5" maxFrameworkVersion="1.0.0"
											minUpgradableVersion="0.0.0.103" certificationLevel="BASIC"
											pluginAccessRight="EmpHierarchyPlugin">

                                            <PluginConfiguration>
												<FullPage desktopIncludePath="{plugin_root}/ui/tree.xhtml"
													mobileIncludePath="{plugin_root}/ui/tree.xxhtml" />				
                                                <Snippets>
                                                    <Snippet pagesMatchRegExPattern=".*" isMobile="true" isDesktop="true" rightRequired="EmpHierarchyPluginIconRight" >
                                                        <ScriptIncludes>
                                                            <String>{plugin_root}/ui/js/headerInject.js</String>
															 <String>{plugin_root}/ui/js/TreeController.js</String>
															 <String>{plugin_root}/ui/js/TreeDirectives.js</String>
												        </ScriptIncludes>
                                                        <StylesheetIncludes>
                                                            <String>{plugin_root}/ui/css/emptree.css</String>
                                                        </StylesheetIncludes>
                                                    </Snippet>
                                                </Snippets>
                                            </PluginConfiguration>
                                            <ConfigurableSettings>  
                                                <Map>  
                                                    <entry key="attrName" value="department"/>
                                                </Map>  
                                            </ConfigurableSettings>  
                                        </Plugin>
                                    </value>
                                </entry>
                            </Map>
                        </value>
                    </entry>
                </Map>
            </Attributes>
        </Configuration>
    </ImportAction>
</sailpoint>
